<form action="javascript:;" method="post">

	<div class="px2-form-input-list">
		<ul class="px2-form-input-list__ul">
			<li class="px2-form-input-list__li" data-name="input-package-id">
				<div class="px2-form-input-list__label"><label for="input-package-id"><%= lb.get("ui_label.package_id") %></label></div>
				<div class="px2-form-input-list__input">
					<input type="text" name="packageId" class="px2-input px2-input--block" id="input-package-id" />
					<div><label><input type="checkbox" name="force" value="1" /> <%= lb.get("ui_label.overwrite_if_already_exists") %></label></div>
				</div>
			</li>
			<li class="px2-form-input-list__li" data-name="input-package-name">
				<div class="px2-form-input-list__label"><label for="input-package-name"><%= lb.get("ui_label.package_name") %></label></div>
				<div class="px2-form-input-list__input">
					<input type="text" name="packageName" class="px2-input px2-input--block" id="input-package-name" />
				</div>
			</li>
		</ul>
	</div>

	<div class="px2-tabs pickles2-module-editor-new-package-import">
		<div class="px2-tabs__tabs">
			<ul>
				<li><a href="javascript:;"><%= lb.get("ui_label.import") %></a></li>
				<li><a href="javascript:;"><%= lb.get("ui_label.plugin_packages") %></a></li>
				<li><a href="javascript:;"><%= lb.get("ui_label.existing_packages") %></a></li>
			</ul>
		</div>
		<div class="px2-tabs__contents">
			<div class="px2-tabs__content">
				<ul class="pickles2-module-editor-radio-list">
					<li><label><input type="radio" name="import_from" value="" data-package-id="" data-package-name="" checked="checked" /> <%= lb.get("ui_label.build_from_scratch") %></label></li>
				</ul>
			</div>
			<div class="px2-tabs__content">
				<% if (pluginPackages) { %>
					<ul class="pickles2-module-editor-radio-list">
					<% for( var idx in pluginPackages ){ %>
						<li><label><input type="radio" name="import_from" value="modulePlugin:<%= idx %>" data-package-id="<%= pluginPackages[idx].id %>" data-package-name="<%= pluginPackages[idx].name %>" /> <%= pluginPackages[idx].name %></label></li>
					<% } %>
					</ul>
				<% }else{ %>
					<p><%= lb.get("ui_message.the_plugin_package_cannot_be_found") %></p>
				<% } %>
			</div>
			<div class="px2-tabs__content">
				<% if (broccoliPackages) { %>
					<ul class="pickles2-module-editor-radio-list">
					<% for( var idx in broccoliPackages ){ %>
						<li><label><input type="radio" name="import_from" value="moduleCollection:<%= idx %>" data-package-id="<%= idx %>" data-package-name="<%= broccoliPackages[idx].packageName %>" /> <%= broccoliPackages[idx].packageName %></label></li>
					<% } %>
					</ul>
				<% } else { %>
					<p><%= lb.get("ui_message.there_are_no_existing_packages_registered") %></p>
				<% } %>
			</div>
		</div>
	</div>

</form>
